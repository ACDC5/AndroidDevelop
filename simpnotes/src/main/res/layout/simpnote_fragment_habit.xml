<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_habit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:scrollY="@dimen/edit_todo">


    <EditText
        android:id="@+id/edit_habit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"

        android:padding="@dimen/todo_edit_padding"
        android:text="@string/edit_todo"
        android:textColor="@color/simpNotes_text_normal"
        android:textColorLink="@color/simpNote_list_item_note_background"
        android:textSize="@dimen/simnote_Headline"
        android:visibility="visible" />
</LinearLayout>



